# Clawbridge Runner Environment Variables
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!

# =============================================================================
# WORKSPACE CONFIGURATION
# =============================================================================

# Workspace token for vault uploads (get from clawbridge.cloud)
CLAWBRIDGE_WORKSPACE_TOKEN=

# =============================================================================
# DISCORD DELIVERY
# =============================================================================

# Option 1: Webhook URL (recommended - simpler setup)
# Create a webhook in Discord channel settings > Integrations > Webhooks
DISCORD_WEBHOOK_URL=

# Option 2: Bot token (for more control)
# Create at https://discord.com/developers/applications
DISCORD_BOT_TOKEN=

# =============================================================================
# SLACK DELIVERY
# =============================================================================

# Option 1: Incoming Webhook URL
# Create at https://api.slack.com/apps > Incoming Webhooks
SLACK_WEBHOOK_URL=

# Option 2: Bot token (for more features)
# Create app at https://api.slack.com/apps with chat:write scope
SLACK_BOT_TOKEN=

# =============================================================================
# EMAIL DELIVERY
# =============================================================================

# SMTP password (for Gmail, use App Password)
SMTP_PASSWORD=

# =============================================================================
# LOGGING
# =============================================================================

# Log level: debug, info, warn, error
LOG_LEVEL=info

# =============================================================================
# ADVANCED
# =============================================================================

# Node environment
NODE_ENV=production
